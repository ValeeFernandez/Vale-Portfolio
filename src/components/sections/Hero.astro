---
import { Image } from "astro:assets";
import valeImg from "/src/images/vale.jpg";
---

<section id="hero" class="min-h-screen flex items-center justify-center py-8 bg-background relative">
  <div class="max-w-9xl mx-auto px-6 grid md:grid-cols-2 gap-12 md:gap-24 lg:gap-32 items-center">
    
    <div class="z-20 flex flex-col items-center md:items-start text-center md:text-left pr-0 md:pr-10">
      <h1 class="text-4xl sm:text-5xl md:text-7xl font-black leading-[1.1] tracking-tight text-primary">
        Lelany <br />
        <span class="text-primaryDark"> Fernández </span>
      </h1>

      <h2 class="mt-6 text-lg sm:text-xl md:text-2xl font-bold text-gray-500 max-w-md">
        Information Systems <span class="text-primaryDark font-extrabold">Engineer</span>
      </h2>

      <p class="mt-6 text-base sm:text-lg text-gray-600 max-w-lg leading-relaxed border-l-4 border-accent pl-6 font-medium">
        Frontend & Automation Developer focused on building <span class="text-accent font-black italic">clean</span>, efficient, and user-centered digital solutions.
      </p>

      <div class="mt-10 flex gap-8 items-center">
        <a
          href="#contact"
          class="px-8 py-4 bg-primary text-white font-black rounded-xl transition-all duration-300 hover:bg-primaryDark hover:shadow-lg active:scale-95 shadow-md shadow-primary/20"
        >
          <span class="flex items-center gap-2">
            Let's talk
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </span>
        </a>

        <a
          href="#projects"
          class="text-primaryDark font-black hover:text-accent transition-colors duration-300 border-b-2 border-transparent hover:border-accent"
        >
          View Work
        </a>
      </div>
    </div>

    <div class="relative flex items-center justify-center">
      <div class="absolute top-0 -right-4 w-12 h-12 bg-accent/40 rounded-full blur-xl animate-bounce-slow"></div>
      <div class="absolute -bottom-10 -left-10 w-20 h-20 bg-primary/30 rounded-full blur-2xl animate-pulse"></div>
      <div class="absolute top-1/4 -left-24 w-6 h-6 bg-accent/60 rounded-full blur-md animate-float"></div>
      <div class="absolute bottom-0 right-10 w-8 h-8 bg-primary/40 rounded-full blur-lg animate-float" style="animation-delay: 2s;"></div>
      <div class="absolute -top-20 left-10 w-10 h-10 bg-accent/20 rounded-full blur-xl animate-bounce-slow"></div>
      <div class="absolute top-1/2 -right-20 w-5 h-5 bg-primary/50 rounded-full blur-sm animate-pulse"></div>

      <div class="relative w-[320px] h-[320px] md:w-[500px] md:h-[500px] flex items-center justify-center">
        <div class="absolute inset-0 rounded-full border-2 border-accent/60 animate-spin-slower shadow-[0_0_15px_rgba(125,106,166,0.2)]"></div>
        <div class="absolute inset-8 md:inset-12 rounded-full border-2 border-dashed border-primaryDark/60 animate-spin-reverse-slow"></div>
        <div class="absolute inset-16 md:inset-24 rounded-full border border-accent/30 animate-spin-slow">
          <div class="absolute -top-2 left-1/2 w-4 h-4 bg-accent rounded-full shadow-[0_0_15px_#D989CB]"></div>
        </div>

        <div class="group relative z-10">
          <div class="absolute -inset-1 bg-gradient-to-r from-primary via-accent to-primary rounded-full opacity-0 group-hover:opacity-100 blur transition duration-500"></div>
          <div class="relative w-44 h-44 md:w-64 md:h-64 rounded-full overflow-hidden border-[6px] border-background bg-background shadow-2xl transition-transform duration-500 group-hover:scale-105">
            <Image src={valeImg} alt="Lelany Fernández" class="w-full h-full object-cover" />
          </div>
        </div>
      </div>
    </div>

  </div>
</section>