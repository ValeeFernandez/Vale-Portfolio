---
import { Image } from "astro:assets";
import valeImg from "/src/images/vale.jpg";
---

<section
  id="hero"
  class="relative min-h-screen flex items-center justify-center py-24 md:py-8 bg-background overflow-hidden"
>
  <div
    class="relative w-full max-w-[1400px] mx-auto px-6 grid gap-20 md:grid-cols-2 md:gap-24 items-center"
  >
    <!-- TEXT -->
    <div
      class="flex flex-col items-center md:items-start text-center md:text-left"
    >
      <h1
        class="text-4xl sm:text-5xl md:text-7xl font-black leading-[1.1] tracking-tight text-primary"
      >
        Lelany <br />
        <span class="text-primaryDark">Fernández</span>
      </h1>

      <h2
        class="mt-6 text-lg sm:text-xl md:text-2xl font-bold text-muted max-w-md"
      >
        Information Systems
        <span class="text-primaryDark font-extrabold">Engineer</span>
      </h2>

      <p
        class="mt-6 text-base sm:text-lg max-w-lg leading-relaxed border-l-4 border-accent pl-6 font-medium text-muted"
      >
        Frontend & Automation Developer focused on building
        <span class="text-accent font-black italic">clean</span>, efficient, and
        user-centered digital solutions.
      </p>

      <div
        class="mt-12 flex flex-wrap gap-8 items-center justify-center md:justify-start"
      >
        <a
          href="#contact"
          class="px-8 py-4 bg-primary text-white font-black rounded-xl transition-all duration-300 hover:bg-primaryDark hover:shadow-lg active:scale-95 shadow-md"
        >
          <span class="flex items-center gap-2">
            Let's talk
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </span>
        </a>

        <a
          href="#projects"
          class="text-primaryDark font-black transition-colors duration-300 border-b-2 border-transparent hover:text-accent hover:border-accent"
        >
          View Work
        </a>
      </div>
    </div>

    <!-- IMAGE -->
    <div class="relative flex items-center justify-center pt-6 md:pt-0">
      <!-- floating dots -->
      <div
        class="absolute top-4 right-4 w-12 h-12 rounded-full bg-glow blur-xl animate-bounce-slow"
      >
      </div>
      <div
        class="absolute bottom-0 left-0 w-20 h-20 rounded-full bg-glow blur-2xl animate-float"
      >
      </div>
      <div
        class="absolute top-1/4 left-0 w-5 h-5 rounded-full bg-glow blur-md animate-float"
      >
      </div>
      <div
        class="absolute bottom-6 right-10 w-7 h-7 rounded-full bg-glow blur-lg animate-float"
        style="animation-delay: 2s;"
      >
      </div>

      <div
        class="relative w-[300px] h-[300px] sm:w-[360px] sm:h-[360px] md:w-[620px] md:h-[620px] flex items-center justify-center"
      >
        <div
          class="relative w-[260px] h-[260px] sm:w-[320px] sm:h-[320px] md:w-[500px] md:h-[500px] flex items-center justify-center"
        >
          <div
            class="absolute inset-[-6px] border-2 border-glow animate-spin-slower animate-blob"
          >
          </div>

          <div
            class="absolute inset-8 md:inset-12 rounded-full border-2 border-dashed border-soft animate-spin-reverse-slow"
          >
          </div>

          <div
            class="absolute inset-16 md:inset-24 rounded-full border border-glow animate-spin-slow"
          >
            <div
              class="absolute -top-2 left-1/2 w-4 h-4 rounded-full bg-accent shadow-lg"
            >
            </div>
          </div>

          <div class="group relative z-10">
            <div
              class="absolute -inset-1 rounded-full bg-gradient-to-r from-primary via-accent to-primary opacity-0 group-hover:opacity-100 blur transition duration-500"
            >
            </div>

            <div
              class="relative w-40 h-40 sm:w-48 sm:h-48 md:w-64 md:h-64 rounded-full overflow-hidden border-[6px] border-background bg-background shadow-2xl transition-transform duration-500 group-hover:scale-105"
            >
              <Image
                src={valeImg}
                alt="Lelany Fernández"
                class="w-full h-full object-cover"
                loading="eager"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
